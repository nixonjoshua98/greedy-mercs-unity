{
  "version": 1,
  "disable_existing_loggers": false,
  "handlers": {
    "console": {
      "formatter": "standard",
      "class": "logging.StreamHandler",
      "level": "DEBUG"
    },
    "file": {
      "level": "DEBUG",
      "class": "logging.handlers.RotatingFileHandler",
      "formatter": "default",
      "filename": "./logs/log.log",
      "maxBytes": 10000,
      "backupCount": 5,
      "delay": true
    }
  },
  "formatters": {
    "default": {
      "format": "%(levelname)-9s %(asctime)s %(message)s",
      "datefmt": "%d/%m/%Y %H:%M:%S"
    }
  },
  "loggers": {
    "greedy-mercs": {
      "handlers": [
        "console",
        "file"
      ],
      "level": "DEBUG"
    }
  }
}